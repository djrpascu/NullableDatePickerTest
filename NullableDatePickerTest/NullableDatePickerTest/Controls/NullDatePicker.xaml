<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NullableDatePickerTest.Controls.NullDatePicker">
    <ContentView.Content>
        <StackLayout Orientation="Horizontal" HorizontalOptions="Fill">
            <DatePicker x:Name="cDatePicker"
                        DateSelected="cDatePicker_DateSelected"
                        Focused="cDatePicker_Focused"
                        Unfocused="cDatePicker_Unfocused">
            </DatePicker>
            <Entry x:Name="cDateEntry"
                   HorizontalOptions="FillAndExpand"
                   VerticalOptions="Fill"
                   Focused="cDateEntry_Focused">
            </Entry>
            <Button x:Name="cClearDateButton"
                    Clicked="cClearDateButton_Clicked" />
        </StackLayout>
    </ContentView.Content>
</ContentView>